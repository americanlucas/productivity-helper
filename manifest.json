{
  "manifest_version": 3,
  "name": "Productivity Helper",
  "version": "1.0.0",
  "description": "Uma extensão para aumentar sua produtividade com salvamento de links, anotações rápidas e gerenciamento de tarefas.",
  "icons": {
    "16": "icons/icon16.jpg",
    "32": "icons/icon32.jpg",
    "48": "icons/icon48.jpg",
    "128": "icons/icon128.jpg"
  },
  "action": {
    "default_title": "Productivity Helper",
    "default_popup": "src/popup/popup.html"
  },
  "options_page": "src/options/options.html",
  "permissions": ["storage", "tabs", "activeTab"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"],
      "run_at": "document_idle"
    }
  ]
}
